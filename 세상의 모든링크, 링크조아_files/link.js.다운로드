this.imagePreview=function(){xOffset=10;yOffset=30;$("a.preview").hover(function(e){this.t=this.title;this.s=this.dataset.subject;this.title="";this.dataset.subject="";var c=(this.t!="")?"<br/>"+this.t:"";var i=(this.s!="")?"<br/>"+this.s:"";$("body").append("<p id='preview'><img src='"+this.dataset.value+"' /><span class='subj'>"+i+"</span>"+c+"</p>");$("#preview").css("top",(e.pageY-xOffset)+"px").css("left",(e.pageX+yOffset)+"px").fadeIn("fast");},function(){this.title=this.t;this.dataset.subject=this.s
$("#preview").remove();});$("a.preview").mousemove(function(e){$("#preview").css("top",(e.pageY-xOffset)+"px").css("left",(e.pageX+yOffset)+"px");});};$(document).ready(function(){imagePreview();});